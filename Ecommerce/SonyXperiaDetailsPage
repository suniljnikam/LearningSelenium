package pageFactory;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class SonyXperiaDetailsPage {
	
	WebDriver driver;
	
	@FindBy(xpath = "//*[@id='product-price-1']/span")
	WebElement sonyXperiaDetailedPrice;
		
	public SonyXperiaDetailsPage(WebDriver driver)
	{
		this.driver=driver;
		PageFactory.initElements(driver,this);
	}
	
	public String getPriceOfSony()
	{
		return sonyXperiaDetailedPrice.getText();
	}
}
 
